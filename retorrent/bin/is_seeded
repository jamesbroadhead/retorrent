#!/usr/bin/python
"""
Usage:
    is_seeded TARGETS...
    is_seeded -u TARGETS...

Options:
    -u, --only-unseeded


"""
import sys

from docopt import docopt

from retorrentlib import seededlib

def main(only_unseeded, targets):

    seeded,unseeded = seededlib.is_seeded(targets)

    if only_unseeded:
        print ' '.join(unseeded)
    else:
        print "Seeded:"
        for i in seeded:
            print "\t", i
        print "Unseeded:"
        for j in unseeded:
            print "\t", j

    # nothing is unseeded - is_seeded returns true
    if not unseeded:
        return 0
    else:
        return 1

if __name__ == '__main__':
    arguments = docopt(__doc__)
    try:
        returncode = main(arguments['--only-unseeded'], arguments['TARGETS'])
        sys.exit(returncode)
    except KeyboardInterrupt:
        pass
